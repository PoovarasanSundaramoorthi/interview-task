{
  "compilerOptions": {
    "module": "ESNext",         // ES module system
    "target": "ESNext",         // Target the latest ECMAScript version
    "moduleResolution": "Node", // Resolve modules in the same way as Node
    "esModuleInterop": true,    // Enable interop with CommonJS modules
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,            // Allow JS alongside TS files
    "strict": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "esModuleInterop": true
    }
  }
}
